{
    "name": "JIRA Service Desk Comment Button Customization",
    "version": "1.0",
    "description": "Customize JIRA Service Desk Comment Internal and Share with Customer Button on JIRA cloud",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": [
                "https://*.atlassian.net/*"
            ],
            "js": [
                "buttonCustomization.js"
            ]
        }
    ],
    "manifest_version": 2
}